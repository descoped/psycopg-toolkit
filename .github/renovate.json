{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 4am on monday"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "platformAutomerge": true,
  "baseBranchPatterns": [
    "master"
  ],
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates for all dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Major updates always require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "major-update"
      ]
    },
    {
      "description": "Core database dependencies - require manual review",
      "matchPackageNames": [
        "psycopg",
        "psycopg-pool"
      ],
      "automerge": false,
      "labels": [
        "database",
        "dependencies"
      ]
    },
    {
      "description": "Pydantic updates - require manual review for breaking changes",
      "matchPackageNames": [
        "pydantic"
      ],
      "automerge": false,
      "labels": [
        "pydantic",
        "dependencies"
      ]
    },
    {
      "description": "Group Python dependencies",
      "matchManagers": [
        "pip_requirements",
        "pip_setup",
        "pipenv",
        "poetry",
        "pep621"
      ],
      "groupName": "python dependencies",
      "groupSlug": "python-deps"
    },
    {
      "description": "Group test dependencies",
      "matchPackageNames": [
        "pytest",
        "pytest-asyncio",
        "testcontainers"
      ],
      "groupName": "test dependencies",
      "groupSlug": "test-deps"
    },
    {
      "description": "Group dev dependencies",
      "matchPackageNames": [
        "flake8",
        "restructuredtext-lint",
        "pygments"
      ],
      "groupName": "dev dependencies",
      "groupSlug": "dev-deps"
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "automerge": true
    }
  ],
  "pep621": {
    "enabled": true
  },
  "rangeStrategy": "auto",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prBodyTemplate": "This PR contains the following updates:\n\n| Package | Type | Update | Change |\n|---------|------|--------|---------|\n{{#each upgrades as |upgrade|}}\n| {{upgrade.depName}} | {{upgrade.depType}} | {{upgrade.updateType}} | `{{upgrade.currentVersion}}` â†’ `{{upgrade.newVersion}}` |\n{{/each}}\n\n---\n\n### Release Notes\n{{#each upgrades as |upgrade|}}\n{{#if upgrade.hasReleaseNotes}}\n<details>\n<summary>{{upgrade.depName}}</summary>\n\n{{upgrade.releaseNotes}}\n</details>\n{{/if}}\n{{/each}}\n\n---\n\n This PR has been generated by Renovate Bot.",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "dependencies"
    ],
    "automerge": false
  },
  "osvVulnerabilityAlerts": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 4am on monday"
    ]
  }
}